<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloWorldP" class="com.xiaomingyk.lessonOne.HelloWorld" scope="prototype" init-method="init" destroy-method="destroy">
        <property name="message" value="Hello prototype!"/>
    </bean>

    <bean id="helloWorldS" class="com.xiaomingyk.lessonOne.HelloWorld" scope="singleton" init-method="init" destroy-method="destroy">
        <property name="message" value="Hello !"/>
    </bean>

</beans>